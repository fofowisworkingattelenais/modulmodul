<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <record id="form_hr_karyawanPayroll" model="ir.ui.view">
            <field name="name">Karyawan : ar_hr_payroll</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
			<field name="inherit_id" ref="ar_hr.form_hr_karyawan"/>   
            <field name="arch" type="xml">
				<data>
					<notebook colspan="4" position="inside">
						<page string="Pendapatan">
							<separator string="Pendapatan Teratur" colspan="4"/>
							<field name="pendapatan_teratur_ids" colspan="4" nolabel="1"/>
							<separator string="Pendapatan Tidak Teratur" colspan="4"/>
							<field name="pendapatan_tidak_teratur_ids" colspan="4" nolabel="1"/>							
						</page>
						<page string="Potongan">
							<separator string="Kontribusi Karyawan" colspan="4"/>
							<field name="potongan_ids" colspan="4" nolabel="1"/>
							<separator string="Kontribusi Perusahaan" colspan="4"/>
							<field name="potongan_kontribusi_ids" colspan="4" nolabel="1"/>					
						</page>					
						<page string="Asuransi">
							<separator string="Kontribusi Karyawan" colspan="4"/>
							<field name="asuransi_ids" colspan="4" nolabel="1"/>
							<separator string="Kontribusi Perusahaan" colspan="4"/>
							<field name="asuransi_kontribusi_ids" colspan="4" nolabel="1"/>						
						</page>		
						<page string="Pensiun">
							<separator string="Kontribusi Karyawan" colspan="4"/>
							<field name="pensiun_ids" colspan="4" nolabel="1"/>
							<separator string="Kontribusi Perusahaan" colspan="4"/>
							<field name="pensiun_kontribusi_ids" colspan="4" nolabel="1"/>						
						</page>		
						<page string="Jamsostek">
							<separator string="Perhitungan Jamsostek" colspan="4"/>
							<field name="jamsostek_ids" colspan="4" nolabel="1"/>					
						</page>															
					</notebook>
				</data>
            </field>
        </record>     
    </data>
</openerp>
