        <!-- Search Ketentuan Gaji -->       

        <record id="search_hr_ketentuanGaji" model="ir.ui.view">
            <field name="name">Search Ketentuan Gaji</field>
            <field name="model">hr.salary.rule</field>
            <field name="type">search</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search string="Search Ketentuan Gaji">
                    <group col="8" colspan="4">
                        <field name="name" string="Ketentuan Gaji"/>
                        <field name="code" select="1" string="Kode"/>
                        <field name="category_id" string="Kategori"/>
                    </group>
                    <newline/>
                    <group col="8" colspan="4" expand="0" string="Group By...">
                        <filter string="Kategori" icon="terp-folder-yellow" name="head" context="{'group_by':'category_id'}"/>
                    </group>
                </search>
