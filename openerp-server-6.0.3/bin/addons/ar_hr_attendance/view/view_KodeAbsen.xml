<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="tree_hr_kodeAbsen" model="ir.ui.view">
            <field name="name">Tree Kode Absen</field>
            <field name="model">hr.kode_absen</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Kode Absen">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="jenis_absen_id"/>
                </tree>
            </field>
        </record>
            
        <record id="form_hr_kodeAbsen" model="ir.ui.view">
            <field name="name">Form Kode Absen</field>
            <field name="model">hr.kode_absen</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Kode Absen">
                	<group name="group_1" colspan="4" col="2">
                		<group name="group_1_1" colspan="1" col="2" >
                	 		<separator colspan="2" string="Kode Absen"/>
                	 		<field name="name"/>
                	 		<field name="kode"/> 
                	 		<field name="jenis_absen_id"/>            	 		
                    	</group>
                		<group name="group_1_2" colspan="1" col="2">
                	 		<separator colspan="2" string="Status"/>
				            <field name="active"/>
                    	</group>                    	
                	</group>
                	<separator string="Keterangan" colspan="4"/>
                	<field name="keterangan" colspan="4" nolabel="1"/>
                </form>
            </field>
        </record>




        <record id="search_hr_kodeAbsen" model="ir.ui.view">
            <field name="name">Search Kode Absen</field>
            <field name="model">hr.kode_absen</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Kode Absen">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="jenis_absen_id"/>
               </search>
            </field>
        </record>
    </data>
</openerp>

