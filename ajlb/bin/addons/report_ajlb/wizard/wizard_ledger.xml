<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="form_report_ajlb_wizardLedger" model="ir.ui.view">
            <field name="name">Form Wizard Ledger</field>
            <field name="model">report_ajlb.wizard_ledger</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Ledger">
					<group name="group_1" colspan="4" col="2">
						<group name="group_1_1" colspan="1" col="2">
							<field name="date_from" colspan="2"/>
							<field name="date_to" colspan="2"/>
							<field name="account_id" colspan="2"/>
						</group>											
					</group>
					<button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
					<button name="cetak_report" type="object" string="Print" colspan="2" icon="gtk-print"/>
                </form>
            </field>
        </record>

        <record id="waction_report_ajlb_wizardLedger" model="ir.actions.act_window">
            <field name="name">Ledger</field>
            <field name="res_model">report_ajlb.wizard_ledger</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
			<field name="view_id" ref="form_report_ajlb_wizardLedger"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
